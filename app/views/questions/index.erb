<h3>Top Questions</h3>
<div class="question-container">
  <% @questions.each do |question| %>
    <hr>
    <article id="<%= question.id %>">

    <div class="stat-container">
      <div class="stat">
        <div class="count">
          <span><%= question.total_votes %></span>
        </div>
        <div class="mini-label">votes</div>
      </div>
      <div class="stat">
        <div class="count">
          <span><%= question.total_answers %></span>
        </div>
        <div class="mini-label">answers</div>
      </div>
    </div>

      <!-- <ul class="question">
        <li><a href="/questions/<%= question.id %>"><%= question.title %></a><br><%= "Asked #{long_form_date(question.created_at)}" %> <%= question.user.username %></li>
      </ul> -->
    </article>
  <% end %>
</div>
