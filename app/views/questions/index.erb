<h3>Top Questions</h3>
<div class="questions-container">
  <% @questions.each do |question| %>

    <article id="<%= question.id %>">

    <div class="stat-container">
      <div class="stat">
        <div class="count">
          <span><%= question.total_votes %></span>
        </div>
        <div class="mini-label">votes</div>
      </div>
      <div class="stat">
        <div class="count">
          <span><%= question.total_answers %></span>
        </div>
        <div class="mini-label">answers</div>
      </div>
    </div>

    <div class="question">

      <div class="question-details">
        <div class="question-text">
          <span><a href="/questions/<%= question.id %>"><%= question.title %></a><span>
        </div>
      </div>

      <div class="question-details">
        <div class="question-info">
          <span><%= "Asked on #{long_form_date(question.created_at)}" %><%= question.user.username %></span>
        </div>
      </div>

    </div>
    </article>
  <% end %>
</div>
